        echo ""
        sleep 1
        exit
    fi
    clear
}

# Verificar permisos de root
if [[ $EUID -ne 0 ]]; then
    echo -e ""
    echo -e " ‚ö†Ô∏è ${rojo}Este script debe ejecutarse como root.${borra_colores}"
    echo -e ""
    exit 1
fi
control_ejecucion
